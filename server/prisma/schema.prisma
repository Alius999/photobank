generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  nickname  String?  @unique
  password  String
  age       Int
  createdAt DateTime @default(now())
  photos    Photo[] @relation("Author")
  comments  Comment[]
}

model Photo {
  id            Int     @id @default(autoincrement())
  description   String?
  author        User    @relation("Author", fields: [authorId], references: [id])
  authorId      Int
  createdAt     DateTime @default(now())
  photoUrl      String?
  comments  Comment[]
}

model Comment {
  id          Int     @id @default(autoincrement())
  photo       Photo   @relation(fields: [photoId], references: [id])
  photoId     Int
  author      User    @relation(fields: [authorId], references: [id])
  authorId    Int
  content     String
  createdAt   DateTime @default(now())
}